{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*",
        "./server/*",
        "./dist/server/*"
      ],
      "@/*": [
        "./*",
        "./server/*",
        "./dist/server/*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "cli": {
    "entitiesDir": "server/models",
    "migrationsDir": "server/db/migrations"
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
